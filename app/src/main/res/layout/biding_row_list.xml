<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="3dp"

    android:layoutDirection="ltr"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/startImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/darkGray"
        android:src="@drawable/ic_stars_black_36dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/bidRowLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#fff"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bidderNameTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/auc_rec1"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:background="@drawable/auc_rec2"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="الاسم"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#fff" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/biddingDateTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/auc_rec1"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:background="@drawable/auc_rec2"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="التاريخ"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#fff" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/biddingPriceTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/auc_rec1"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/priceOrDaysTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:background="@drawable/auc_rec2"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#fff" />

        <LinearLayout
            android:id="@+id/daysPriceLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/biddingDaysPriceTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/auc_rec1"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:background="@drawable/auc_rec2"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="السعر"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#fff" />

        <LinearLayout
            android:id="@+id/cashLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:visibility="visible">

            <TextView
                android:id="@+id/cashTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/auc_rec1"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:background="@drawable/auc_rec2"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="المبلغ الكاش"
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121829"
    android:layoutDirection="ltr">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:layoutDirection="ltr"
                android:orientation="vertical">


                <LinearLayout
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <Spinner
                        android:id="@+id/allAuctionsNamesSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/product"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/itemPriceTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="1dp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:textColor="#154C00"
                        android:textSize="@dimen/_22sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/currentPriceTxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/price_now"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/auc_rec1"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/userNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/name"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/natIDEditTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/enter_nat_id"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/monthelyAmountTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="الخصم الشهرى"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/numOfInstallementMonthsLine"
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/monthsNumTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/numOfMonthTxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text=" شهور القسط"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/amountAfterDiscTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="القيمةبعدالخصم"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/maxMonthsTxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="الحد الأقصى للشهور"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/monthInstaTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="@string/monthly_installment"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bidNumLine"
                    android:visibility="visible"
                    android:background="@drawable/auc_rec1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/bidCountTxt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1"

                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".6"
                        android:background="@drawable/auc_rec2"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="عددالمزايدات"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/invoiceCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="1dp"
                android:layoutDirection="ltr"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/auc_rec2"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/newTimer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/timeToStOrFinTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_9sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layoutDirection="ltr"
                android:orientation="vertical">


                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/auc_rec2"
                    android:orientation="horizontal">

                   <!-- <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/max_add_value"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/min_add_value"
                        android:textColor="#fff"
                        android:textSize="@dimen/_15sdp" />-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/maxValBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bidding_circle"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/textMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="45dp"

                            android:textColor="#fff"
                            android:textSize="@dimen/_25sdp"
                            android:textStyle="bold|italic" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/minValueBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/image10"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bidding_circle"

                            />

                        <TextView
                            android:id="@+id/textMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="45dp"

                            android:textColor="#fff"
                            android:textSize="@dimen/_25sdp"
                            android:textStyle="bold|italic" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/refreshDataBtn"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/auc_rec2"
                android:gravity="center"
                android:onClick="refreshDataBtn"
                android:text="تحديث البيانات"
                android:textColor="#fff"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:visibility="gone"
        android:id="@+id/infoImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:background="@drawable/in" />

</RelativeLayout>

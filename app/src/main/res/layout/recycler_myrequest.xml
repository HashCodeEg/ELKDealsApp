<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="3dp"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="@dimen/_2sdp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    android:elevation="@dimen/_8sdp">

    <!--tools:showIn="@layout/fragment_myrequests"-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/round_cart_border">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:textColor="#3c3c3c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/request_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id"
                android:textSize="16sp"
                android:textColor="@color/colorAccentRequests"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_2sdp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/product_title"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/request_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/product_title"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/colorAccentRequests"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_2sdp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/request_offers"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/request_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/order_status"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/colorAccentRequests"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_2sdp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/order_date"
                    android:textColor="#3c3c3c"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/request_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/order_date"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/colorAccentRequests"
                    android:textAlignment="textEnd"
                    android:gravity="end"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>

            <CheckBox
                android:id="@+id/new_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حالة جديد"
                android:layout_marginTop="@dimen/_2sdp" />

            <CheckBox
                android:id="@+id/used_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حالة مستعمل"
                android:layout_marginTop="@dimen/_2sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="start"
                android:text="@string/details"
                android:textColor="#3c3c3c"
                android:textSize="@dimen/_14sp" />
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_date"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/colorAccentRequests"
                android:gravity="start"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/request_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/remove"
            android:textSize="@dimen/_14sp"
            android:textAllCaps="false"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingStart="@dimen/_28sdp"
            android:paddingEnd="@dimen/_28sdp"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bill_pay" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_3sdp">
    <LinearLayout
        android:layout_weight="1"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:id="@+id/creatInvText"
            android:textColor="#000"
            android:text="create inv with"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:id="@+id/creatInvBtn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@color/colorAccentAuctions"
            android:padding="@dimen/_3sdp"
            android:text="اشترك الان"
            android:textColor="#fff" />
    </LinearLayout>
    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/creatInvText22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:text="يمكنك الاشتراك فى 5 مزادات سيارات بقيمة 2000 جنيه بدل من 3350 وبدون تامين"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/subscripInAllBtn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_2sdp"
            android:background="@color/colorAccentAuctions"
            android:text="اشترك الان"
            android:textColor="#fff"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>




</LinearLayout>
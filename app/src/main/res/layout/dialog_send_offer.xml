<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:cardBackgroundColor="@color/transparent"
    tools:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        tools:background="@color/white">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/send_offer"
                android:textColor="#7f7f7f"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/colorAccentRequests" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="start|top"
                    android:maxLines="1"
                    android:text="@string/shipping_fees"
                    android:textColor="#7F7F7F"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:gravity="start|top"
                    android:maxLines="1"
                    android:text="@string/delivery_time"
                    android:textColor="#7F7F7F"
                    android:textSize="@dimen/_12sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/shippingPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/round_input_transfer"
                    android:hint="@string/shipping_fees"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textColor="@color/colorAccentRequests"
                    android:textSize="@dimen/_12sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/none"
                    android:popupBackground="@drawable/none"
                    android:layout_marginStart="@dimen/_2sdp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_input_transfer"
                android:hint="@string/price"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@color/colorAccentRequests"
                android:textSize="@dimen/_12sp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_20sdp" />

            <CheckBox
                android:id="@+id/new_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حالة جديد"

                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_20sdp"/>

            <CheckBox
                android:id="@+id/used_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حالة مستعمل"

                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_20sdp" />
            <TextView
                android:id="@+id/transfer"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:background="@drawable/rounded_input_view_more"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/_6sdp"
                android:text="@string/send_offer"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
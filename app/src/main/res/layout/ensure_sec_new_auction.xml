<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/prodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/auc_rec2"
                    android:gravity="right"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="انا هاشترى"
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/daysOrPriceValTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/daysOrPriceTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/darkGray"
                    android:gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_margin="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monthsNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/darkGray"
                    android:gravity="right"
                    android:padding="@dimen/_3sdp"
                    android:text="عدد الشهور"
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearsNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/darkGray"
                    android:gravity="right"
                    android:padding="@dimen/_3sdp"
                    android:text="عدد السنوات"
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/monthlyInstaTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/auc_rec2"
                    android:gravity="right"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="القسط الشهرى"
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalProductVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/auc_rec2"
                    android:gravity="right"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="اجمالى قيمة المنتج"
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maxValeTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/max_bid_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/auc_rec2"
                    android:gravity="right"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="الحد الاقصى"
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cashValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/auc_rec2"
                    android:gravity="right"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="المبلغ الكاش الذى سيتم دفعه"
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/auc_rec1"
                android:gravity="end"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/cashValueRewrit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:background="@drawable/orange_rect"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="اكتب الكاش هنا"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/auc_rec2"
                    android:gravity="right"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="تاكيد المبلغ الكاش"
                    android:textColor="@color/bluerdWhite"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/auc_rec1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/termsAndCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:background="@drawable/auc_rec1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/white"
                    android:text="موافق على الشروط والاحكام؟"
                    android:textSize="@dimen/_13sdp" />

                <FrameLayout
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">
                <CheckBox
                    android:id="@+id/termsBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:buttonTint="@color/Orange"
                    android:gravity="center" />
                </FrameLayout>
            </LinearLayout>

            <Button
                android:id="@+id/sendPRiceBtn"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/auc_rec2"
                android:padding="@dimen/_3sdp"
                android:text="تــــــــــــاكيد"
                android:textColor="@color/bluerdWhite"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.elkdeals.mobile.activities.ClosedAucActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bluerdWhite"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/prodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#8000"
                android:gravity="right"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/bluerdWhite"
                android:textSize="@dimen/_15sdp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/timerLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layoutDirection="ltr"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/auc_rec2"
                android:padding="@dimen/_3sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/newTimer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/timeToStOrFinTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/daysOrPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/auc_rec2"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/bluerdWhite"
                android:textSize="@dimen/_17sdp" />

            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/aucPriceEdx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/auc_rec1"
                android:padding="@dimen/_5sdp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="@dimen/_17sdp" />
            <TextView
                android:id="@+id/msgTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/auc_rec2"
                android:padding="@dimen/_3sdp"
                android:text=""
                android:textColor="@color/orange"
                android:textSize="@dimen/_12sdp" />
            <Button
                android:visibility="gone"
                android:id="@+id/bidBtn"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/auc_rec2"
                android:text="ارسال"
                android:textColor="@color/bluerdWhite"
                android:textSize="@dimen/_15sdp" />

            <Button
                android:id="@+id/resultsBtn"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/auc_rec2"
                android:text="النتائج"
                android:textColor="@color/bluerdWhite"
                android:textSize="@dimen/_15sdp" />

            <Button
                android:id="@+id/rateUs"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/auc_rec2"
                android:text="رأيك يهمنـــــا"
                android:textColor="@color/bluerdWhite"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
